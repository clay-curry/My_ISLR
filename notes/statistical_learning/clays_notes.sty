% DEFINITION
\definecolor{defs-back}{RGB}{246,244,231}
\definecolor{defs-frame}{RGB}{253,248,152}
\newcommand\definition[2]{
\begin{tcolorbox}[colback=defs-back,colframe=defs-frame,coltitle=black,title=\textbf{Definition: #1}]
#2
\end{tcolorbox}}

% THEOREM
\definecolor{thms-frame}{RGB}{255,138,138}
\definecolor{thms-back}{RGB}{255,230,230}
\newcommand\theorem[3]{
\begin{tcolorbox}[colback=thms-back,colframe=thms-frame,coltitle=black,title=\textbf{Theorem: #1}]
#2
\end{tcolorbox}
Proof:
#3
\hfill \ensuremath{\Box}
}

% PROPERTY
\definecolor{prop-frame}{RGB}{150,169,220}
\definecolor{prop-back}{RGB}{217,245,254}
\newcommand\property[2]{
\begin{tcolorbox}[colback=prop-back,colframe=prop-frame,coltitle=black,title=\textbf{Property: #1}]%
#2
\end{tcolorbox}
}

